<Window x:Class="ForMyLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForMyLove" Background="Transparent"
        mc:Ignorable="d" Loaded="Window_Loaded" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" AllowsTransparency="True" WindowStyle="None" KeyDown="Window_KeyDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas"></Canvas>
        <TextBlock
            x:Name="txbCenter"
            VerticalAlignment="Center"
            FontSize="72" TextAlignment="Center" TextWrapping="Wrap">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFFF6565" />
                    <GradientStop Offset="1" Color="#FFFF7070" />
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</Window>
